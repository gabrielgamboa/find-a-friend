{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"attributePosition": "auto",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
		  "arrowParentheses":"always",
		  "bracketSameLine": false,
		  "bracketSpacing": true,
		  "jsxQuoteStyle": "double",
		  "quoteProperties": "asNeeded",
		  "semicolons": "always",
		  "trailingCommas": "all"
		}
	  },
	  "json": {
		"formatter": {
		  "trailingCommas": "none"
		}
	  }
}
